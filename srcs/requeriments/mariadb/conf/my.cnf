#
# Optimized MariaDB config for Docker + WordPress
#

[mysqld]

# Usuario que ejecuta MariaDB
user                    = mysql

# Directorios
datadir                 = /var/lib/mysql
tmpdir                  = /tmp
pid-file                = /run/mysqld/mysqld.pid

# Conexión de red
# Permite que otros contenedores accedan
bind-address            = 0.0.0.0

# Logging
log_error               = /dev/stderr
general_log             = 0
slow_query_log          = 0

# Binlogs (útil para replicación o backups, opcional)
expire_logs_days        = 10

# Charset por defecto
character-set-server    = utf8mb4
collation-server        = utf8mb4_general_ci

# InnoDB (motor de almacenamiento recomendado para WordPress)
innodb_buffer_pool_size = 128M       # ajustar según la RAM del contenedor
innodb_log_file_size    = 64M
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table   = 1

# Máximo número de conexiones simultáneas (ajustar según necesidades)
max_connections         = 100

# Ajustes de seguridad (SSL opcional)
#ssl-ca = /etc/mysql/cacert.pem
#ssl-cert = /etc/mysql/server-cert.pem
#ssl-key = /etc/mysql/server-key.pem
#require_secure_transport = ON
